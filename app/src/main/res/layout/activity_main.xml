<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:id="@+id/layout_spinners">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Spinner
                    android:id="@+id/ingr_spinner1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#E6E6E6"
                    android:popupBackground="#DCDCDC"
                    android:prompt="@string/ingr_prompt" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Spinner
                    android:id="@+id/ingr_spinner2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#E6E6E6"
                    android:entries="@array/ingr_array"
                    android:popupBackground="#DCDCDC"
                    android:prompt="@string/ingr_prompt" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Spinner
                    android:id="@+id/ingr_spinner3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#E6E6E6"
                    android:entries="@array/ingr_array"
                    android:popupBackground="#DCDCDC"
                    android:prompt="@string/ingr_prompt" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Spinner
                    android:id="@+id/ingr_spinner4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#E6E6E6"
                    android:entries="@array/ingr_array"
                    android:popupBackground="#DCDCDC"
                    android:prompt="@string/ingr_prompt" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Spinner
                    android:id="@+id/ingr_spinner5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#E6E6E6"
                    android:entries="@array/ingr_array"
                    android:popupBackground="#DCDCDC"
                    android:prompt="@string/ingr_prompt" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_horizontal|bottom"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/more_ingr"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:text="@string/addIngr_btn"
                android:layout_marginBottom="15dp"/>

            <Button
                android:id="@+id/less_ingr"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:text="@string/removeIngr_btn"
                android:layout_marginBottom="15dp"/>

            <Button
                android:id="@+id/search_button"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginBottom="30dp"
                android:text="@string/search_btn"/>
        </LinearLayout>
        <!--android:drawableLeft="@drawable/search_icon"-->

    </LinearLayout>

    <!-- Side navigation drawer UI -->
    <ListView
        android:id="@+id/navList"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#262626" />

</android.support.v4.widget.DrawerLayout>